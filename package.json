{
  "name": "upstatus",
  "version": "0.2.0",
  "description": "Simple uptime monitoring CLI",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "upstatus": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": ["uptime", "monitor", "ping", "cli", "health-check"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.2.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "logfx": "^0.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
